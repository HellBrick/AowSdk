<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Themes="clr-namespace:Microsoft.Windows.Themes;assembly=PresentationFramework.Aero"
					xmlns:ctrl="clr-namespace:Utils.WPF.Controls;assembly=Utils.WPF.Controls">
	
	<Style x:Key="StackedLabelBlock" TargetType="{x:Type TextBlock}">
		<Setter Property="TextWrapping" Value="NoWrap"/>
		<Setter Property="TextTrimming" Value="None"/>
		<Setter Property="Margin" Value="0,5,0,0"/>
	</Style>

	<Style x:Key="StackedTextBox" TargetType="{x:Type TextBox}">
		<Setter Property="MinHeight" Value="21"></Setter>
		<Setter Property="Margin" Value="7,4,4,4"></Setter>
	</Style>
	
	<Style x:Key="StackedCheckBox" TargetType="{x:Type CheckBox}">
		<Setter Property="Margin" Value="0,5,0,0"></Setter>
	</Style>
	
	<Style x:Key="StackedComboBox" TargetType="{x:Type ComboBox}">
		<Setter Property="Margin" Value="7,2,4,6"></Setter>
		<Setter Property="HorizontalContentAlignment" Value="Stretch"></Setter>
	</Style>

	<Style x:Key="StackedEnumEditor" TargetType="{x:Type ctrl:EnumEditor}">
		<Setter Property="Margin" Value="6,6,4,4"></Setter>
	</Style>

</ResourceDictionary>